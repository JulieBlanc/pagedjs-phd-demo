{
    "customHandlers": {
        "directory": "js",
        "files": [
            "custom-handler-example-1.js",
            "custom-handler-example-2.js"
        ]
    },
    "style": {
        "directory": "/assets/css",
        "files": [
            "style.css"        
        ]
    },
    "toc":{
        "enabled": true,
        "container":"#toc-here",
        "titles":[
           ".chapter h2",
           ".chapter h3"
