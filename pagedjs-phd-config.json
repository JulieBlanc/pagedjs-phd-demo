{
    "style": {
        "directory": "/assets/css", 
        "files": [
            "style.css"
        ]
    },
    "customHandlers": {
        "directory": "/assets/js",
        "files": [
            "custom-handler-example-1.js",
            "custom-handler-example-2.js"
        ]
    },
    "toc":{
        "enabled": true,
        "container": "#toc",
        "titles":[
            "h1",
            ".chapter h2",
            ".chapter h3",
            ".chapter h4",
            ".chapter h5"
        ],
        "leaders": true,
        "counters": true,
        "beforepagenumber": ""
     },
     "figures": {
        "enabled": true,
        "selector": "figure:not(.unlisted-figure)",
        "counters": true,
        "textBeforeCounters": "Figure ",
        "textAfterCounters": ". ",
        "list": []
    },
    "notes": {
        "enabled": true,
        "type": "footnote",
        "resetCounter": ".chapter",
        "callInput": ".footnote-ref", 
        "containerNotes": "#footnotes"
    },
    "menu": {
        "lang": "fr",
        "items": [
            "cover",
            "abstract",
            "table of content",
            "acknowledgements",
            "table of figures",
            "introduction",
            "chapters",
            "conclusion",
            "bibliography",
            "credits"
        ]
    }


    
 }